<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:background="#34495e"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_help1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:textColor="#2ecc71"
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Add New Text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="Add New Text" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#27ae60"
            android:id="@+id/textViewDesc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:text="Explication Text1" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textViewDesc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:textColor="#27ae60"
            tools:text="Explication Text2" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textViewDesc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:textColor="#27ae60"
            tools:text="Explication Text3" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textViewDesc4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:textColor="#27ae60"
            tools:text="Explication Text4" />
    </LinearLayout>
</RelativeLayout>