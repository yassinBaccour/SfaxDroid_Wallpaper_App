<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardViewRippleLWP"
            style="@style/Material_Card_View"
            android:visibility="gone"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ecf0f1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:contentDescription="@null"
                    android:minWidth="100dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txttitleripple"
                            style="@style/Material_Card_Title"
                            android:text="@string/TitleRippleLwp"
                            tools:text="@string/TitleRippleLwp" />

                        <TextView
                            android:id="@+id/txtdescripple"
                            style="@style/Material_Card_Subtitle_16dp"
                            android:text="@string/DescRippleLwp"
                            tools:text="@string/DescRippleLwp" />
                    </LinearLayout>

                    <View xmlns:android="http://schemas.android.com/apk/res/android"

                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/divider_grey"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/button1"
                            style="@style/Material_Action"
                            android:layout_gravity="bottom"
                            android:text="@string/set_wallpaper_click_text"
                            android:textColor="@color/primary"
                            tools:text="@string/set_wallpaper_click_text" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardViewDoua"
            style="@style/Material_Card_View"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ecf0f1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageDoua"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:contentDescription="@null"
                    android:minWidth="100dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_doua_lwp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txttitledoua"
                            style="@style/Material_Card_Title"
                            android:text="@string/title_word_anim_lwp"
                            tools:text="@string/title_word_anim_lwp" />

                        <TextView
                            android:id="@+id/txtdescdoua"
                            style="@style/Material_Card_Subtitle_16dp"
                            android:text="@string/DescDouaLwp"
                            tools:text="@string/DescDouaLwp" />
                    </LinearLayout>

                    <View xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/dividerDoua"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/divider_grey"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/buttonDoua"
                            style="@style/Material_Action"
                            android:layout_gravity="bottom"
                            android:text="@string/setSkyboxLwp"
                            android:textColor="@color/primary"
                            tools:text="@string/setSkyboxLwp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSkyBox"
            style="@style/Material_Card_View"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ecf0f1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageStikers"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:contentDescription="@null"
                    android:minWidth="100dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_skybox" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txttilekybox"
                            style="@style/Material_Card_Title"
                            android:text="@string/TitleSkyboxLwp"
                            tools:text="@string/TitleSkyboxLwp" />

                        <TextView
                            android:id="@+id/txtdescskybox"
                            style="@style/Material_Card_Subtitle_16dp"
                            android:text="@string/DescSkyboxLwp"
                            tools:text="@string/DescSkyboxLwp" />
                    </LinearLayout>

                    <View xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/dividerStickers"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/divider_grey"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/buttonSkybox"
                            style="@style/Material_Action"
                            android:layout_gravity="bottom"
                            android:text="@string/setSkyboxLwp"
                            android:textColor="@color/primary"
                            tools:text="@string/setSkyboxLwp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardViewTimer"
            style="@style/Material_Card_View"
            android:visibility="visible"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ecf0f1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:contentDescription="@null"
                    android:minWidth="100dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_timer_lwp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txttitleTimer"
                            style="@style/Material_Card_Title"
                            android:text="@string/timer_wallpaper_name"
                            tools:text="@string/timer_wallpaper_name" />

                        <TextView
                            android:id="@+id/txtdesctimer"
                            style="@style/Material_Card_Subtitle_16dp"
                            android:text="@string/global_how_to_use"
                            tools:text="@string/global_how_to_use" />
                    </LinearLayout>

                    <View xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/dividerTimer"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/divider_grey"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/buttonTimer"
                            style="@style/Material_Action"
                            android:layout_gravity="bottom"
                            android:text="@string/setSkyboxLwp"
                            android:textColor="@color/primary"
                            tools:text="@string/setSkyboxLwp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardViewNameofallah2D"
            style="@style/Material_Card_View"
            android:visibility="visible"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ecf0f1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagedoua"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:contentDescription="@null"
                    android:minWidth="100dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_nameofallah_lwp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txttitleNameofallah2D"
                            style="@style/Material_Card_Title"
                            android:text="@string/nameofallah2dtitle"
                            tools:text="@string/nameofallah2dtitle" />

                        <TextView
                            android:id="@+id/txtdescNameofallah2D"
                            style="@style/Material_Card_Subtitle_16dp"
                            android:text="@string/nameofallah2ddesc"
                            tools:text="@string/nameofallah2ddesc" />
                    </LinearLayout>

                    <View xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/dividerNameofallah2D"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/divider_grey"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/buttonNameofallah2D"
                            style="@style/Material_Action"
                            android:layout_gravity="bottom"
                            android:text="@string/setSkyboxLwp"
                            android:textColor="@color/primary"
                            tools:text="@string/setSkyboxLwp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="About Us"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/timer_green" />

        <Button
            android:id="@+id/btotherapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/other"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rating_app"
            android:visibility="gone" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
