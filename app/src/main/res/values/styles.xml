<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="customPrimaryColor">@color/primary</item>
        <item name="customPrimaryDarkColor">@color/primary_dark</item>
        <item name="customBackgroundColor">@color/primary</item>
        <item name="customBackgroundListColor">@color/primary</item>
        <item name="customCardBackgroundColor">@color/cardBackground</item>
        <item name="customTextAccentColor">@color/colorAccent</item>
        <item name="customTextInvColor">@android:color/white</item>
        <item name="customBlackColor">@android:color/black</item>
        <item name="customTextColor">@android:color/white</item>
        <item name="customTextSubColor">@android:color/white</item>
        <item name="customCardTitleColor">@color/cardTitle</item>
        <item name="customCardSurtitleColor">@color/cardSurTitle</item>
    </style>

    <style name="item_detail_open_button_style" parent="@style/Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:buttonStyle">@style/Base.Widget.AppCompat.Button</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="item_detail_title_style" parent="android:TextAppearance.Material.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/customCardTitleColor</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="item_detail_desc_style" parent="android:TextAppearance.Material.Body2">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/customCardSurtitleColor</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal" />
</resources>