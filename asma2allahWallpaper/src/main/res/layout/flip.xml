<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffeeeeee">

    <LinearLayout
        android:id="@+id/linearLayoutPhoto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="25.0dip"
        android:orientation="vertical"
        android:padding="5.0dip">

        <com.app.girlsgallery.four.TouchImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="matrix" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linearLayoutPhoto"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewWallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:paddingStart="5.0dip"
            android:src="@drawable/pb_setwall" />

        <ImageView
            android:id="@+id/imageViewPrevPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5.0dip"
            android:src="@drawable/pb_prev" />

        <ImageView
            android:id="@+id/imageViewNextPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5.0dip"
            android:src="@drawable/pb_next" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBarPhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6.0dip"
        android:layout_marginRight="6.0dip" />

</RelativeLayout>