<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yassin.sfax.sobhanallahlwp">

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme">
        <service
            android:name="com.yassin.sfax.sobhanallahlwp.LiveWallpaper"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" />
        </service>

        <activity
            android:name="com.yassin.sfax.sobhanallahlwp.MyPreferencesActivity"
            android:exported="true"
            android:label="@string/app_name" />
        <activity
            android:name="com.yassin.sfax.sobhanallahlwp.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
