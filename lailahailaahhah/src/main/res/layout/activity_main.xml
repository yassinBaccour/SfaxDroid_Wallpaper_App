<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#27ae60">


    <TextView
        android:id="@+id/textViewChoose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:text="@string/choose"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toTopOf="@+id/radioWallpaper"
        app:layout_constraintEnd_toEndOf="@+id/radioWallpaper"
        app:layout_constraintStart_toStartOf="@+id/radioWallpaper"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChoose">

        <RadioButton
            android:id="@+id/wallp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:drawableTop="@drawable/ic_mokup2" />

        <RadioButton
            android:id="@+id/wallp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:drawableTop="@drawable/ic_mokup1" />

        <RadioButton
            android:id="@+id/wallp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_mokup3" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonSetWallpaper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/txt2"
        app:layout_constraintEnd_toEndOf="@+id/radioWallpaper"
        app:layout_constraintStart_toStartOf="@+id/radioWallpaper"
        app:layout_constraintTop_toBottomOf="@+id/radioWallpaper" />

    <ImageView
        android:id="@+id/imageViewPub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_pub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSetWallpaper" />
</androidx.constraintlayout.widget.ConstraintLayout>