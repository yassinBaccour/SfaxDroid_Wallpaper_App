<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sfaxdroid.framecollage">

    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application>
        <activity
            android:name="com.sfaxdroid.framecollage.ChooseActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sfaxdroid.framecollage.PreviewActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sfaxdroid.framecollage.stickers.StickersLabActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".gallery.GalleryActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="fullSensor" />
    </application>
</manifest>
